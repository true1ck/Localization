<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Section: Hotspot Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Hotspots"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerHotspot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinnerHotspot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />

            <Spinner
                android:id="@+id/spinnerHotspot3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Section: Signal Strength -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signal Strength"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvSignalStrength1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 1: Not Found"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvSignalStrength2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 2: Not Found"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/tvSignalStrength3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 3: Not Found"
                android:textSize="16sp"
                android:textColor="#444444" />
        </LinearLayout>

        <!-- Section: Image Display -->

        <!--        <ImageView-->
<!--            android:id="@+id/imageViewHotspot"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:scaleType="centerInside"-->
<!--            android:contentDescription="Hotspot Image"-->
<!--            android:src="@drawable/gridimg"-->
<!--            android:background="@drawable/rounded_background"-->
<!--            android:layout_marginBottom="16dp" />-->

        <!-- Section: Signal Map (Grid) -->

        <!-- Section: Status and Start Button -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting for action..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="#555555" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Signal Collection"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textSize="16sp"
            android:elevation="4dp"
            android:layout_marginBottom="16dp" />
        <com.example.loc.GridImageView
            android:id="@+id/gridImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gridimg"
            android:background="@drawable/rounded_background"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
