<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wi-Fi Signal Strength Collector"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="16dp"
            android:textColor="#3F51B5" />

        <!-- Dropdown for Hotspot 1 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Hotspot 1"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerHotspot1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Signal Strength for Hotspot 1 -->
        <TextView
            android:id="@+id/tvSignalStrength1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strength 1: -- dBm"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <!-- Dropdown for Hotspot 2 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Hotspot 2"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerHotspot2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Signal Strength for Hotspot 2 -->
        <TextView
            android:id="@+id/tvSignalStrength2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strength 2: -- dBm"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />

        <!-- Dropdown for Hotspot 3 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Hotspot 3"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerHotspot3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Signal Strength for Hotspot 3 -->
        <TextView
            android:id="@+id/tvSignalStrength3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Strength 3: -- dBm"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="16dp" />


        <!-- Button to Start Data Collection -->
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Collection"
            android:backgroundTint="#3F51B5"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Not Started"
            android:textSize="16sp"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:textColor="#333333" />

    </LinearLayout>
</ScrollView>
