<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Hotspot Selection Spinners -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spinnerHotspot1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinnerHotspot2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinnerHotspot3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <!-- Signal Strength Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvSignalStrength1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 1: Not Found"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSignalStrength2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 2: Not Found"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSignalStrength3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hotspot 3: Not Found"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Grid Layout -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_marginBottom="16dp">

            <!-- The grid cells will be populated programmatically in Java -->

        </GridLayout>

        <!-- Status and Button -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Waiting for action..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Signal Collection" />
    </LinearLayout>
</ScrollView>
